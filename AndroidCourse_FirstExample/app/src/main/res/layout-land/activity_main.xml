<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    >

    <ImageView
        android:layout_width="@dimen/marhsmallow_width"
        android:layout_height="match_parent"
        android:src="@drawable/marshmallow"
        android:id="@+id/image_id"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/image_id"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/love_marshmallow"
            android:layout_centerInParent="true"
            android:textSize="30dp"
            android:textColor="#ee32c0"
            android:id="@+id/text_id"
            />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#ee32c0"
            android:id="@id/button_id"
            android:onClick="likedAction"
            android:layout_below="@id/text_id"
            android:layout_centerHorizontal="true"
            android:text="@string/like"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_name"
            android:textSize="20dp"
            android:id="@id/label_id"
            android:layout_below="@id/button_id"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="#ee32c0"
            />
    </RelativeLayout>



</RelativeLayout>